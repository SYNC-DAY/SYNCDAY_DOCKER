{
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "analysis": {
        "analyzer": {
          "nori_mixed": {
            "type": "custom",
            "tokenizer": "nori_tokenizer",
            "filter": [
              "nori_readingform",
              "lowercase",
              "trim",
              "my_ngram"
            ]
          }
        },
        "filter": {
          "my_ngram": {
            "type": "ngram",
            "min_gram": 1,
            "max_gram": 1
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "userId": {
          "type": "keyword"
        },
        "name": {
          "type": "text",
          "analyzer": "nori_mixed"
        },
        "email": {
          "type": "keyword"
        },
        "profileImage": {
          "type": "keyword"
        },
        "teamName": {
          "type": "keyword"
        },
        "position": {
          "type": "keyword"
        }
      }
    }
  }